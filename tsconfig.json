{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"],
      "@api/*": ["./api/*"]
    }
  },
  "include": ["src", "shared", "config", "modern.config.ts", "api/**/*.ts"],
  "exclude": ["**/node_modules", "shared/async-pool/**/*.js"]
}
